<!-- Header -->
<% include partials/header.ejs %>
<!-- Main Navigation -->
<% include partials/main_nav.ejs %>
<!-- Main content -->
<main class="container">
    <div class="rows">
    <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
        <a href="/book-list/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add Book</a>
        <br>
        <br>
    
    <table class="table table-bordered table-striped table-hover">
    <tr class="d-flex">
        <th class="text-center col-2">Name</th>
        <th class="text-center col-2">Created</th>
        <th class="text-center col-2">Popular</th>
        <th class="text-center col-6">Total</th>
        <th class="text-center col-2">Price</th>
        <th class="text-center col-2">Edit</th>
        <th class="text-center col-2">Delete</th>

    </tr>

    <!-- Repeat the template with loop -->
    <% for(let count=0; count<Blockchainslist.length; count++) { %>
    <tr class="d-flex">
        <td class="text-center col-2"><%= Blockchainslist[count].name %></td>
        <td class="text-center col-2"><%= Blockchainslist[count].created %></td>
        <td class="text-center col-2"><%= Blockchainslist[count].popular %></td>
        <td class="text-center col-6"><%= Blockchainslist[count].total %></td>
        <td class="text-center col-2"><%= Blockchainslist[count].price %></td>
        <td class="text-center col-3">
            <a href="/book-list/edit/<%= Blockchainslist[count]._id %>"
                class="btn btn-primary">
                <i class="fas fa-pencil-alt"><i>Edit</a>
        </td>

        <td class="text-center col-3">
            <a href="/book-list/delete/<%= Blockchainslist[count]._id %>"
                class="btn btn-danger">
                <i class="fas fa-trash-alt"><i>Delete</a>
        </td>


    </tr>
    <% } %>
    
    </table>
    <div>

</div>
</main>
<!-- Bottom Navigation -->
<% include partials/bottom_nav.ejs %>
<!-- Footer -->
<% include partials/footer.ejs %>
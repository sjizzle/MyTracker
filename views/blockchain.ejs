<% include partials/header.ejs %>
<% include partials/main_nav.ejs %>
<!-- Main Navigation -->
<main class="container">

    <div class="row">
    <div class="col-md offset-3 col-md-6">
    <h1><%= title %> </h1>
    <br>

    <table class="table">
    <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Created/th>
        <th class="text-center">Popular</th>
        <th class="text-center">Total</th>
        <th class="text-center">Price</th>

    </tr>


    <!-- Repeat the template with loop -->
    <% for(let count=0; count < Booklist.length; count++) {%>
    <tr>
        <td class="text-center  col-2"><%= Booklist[count].name %></td>
        <td class="text-center  col-2"><%= Booklist[count].created %></td>
        <td class="text-center  col-1"><%= Booklist[count].popular %></td>
        <td class="text-center  col-6"><%= Booklist[count].total %></td>
        <td class="text-center  col-1"><%= Booklist[count].price %></td>
        <td class="text-center col-1">
            <a href="/book-list/edit/<%= Booklist[count]._id %>"
                class="btn btn-primary">
                <i class="fas fa-pencil-alt"><i>Edit</a>
        </td>

        <td class="text-center col-1">
            <a href="/book-list/delete/<%= Booklist[count]._id %>"
                class="btn btn-danger">
                <i class="fas fa-trash-alt"><i>Delete</a>
        </td>


    </tr>
    <% } %>
    
    </table>
    <div>

</div>
</main>
<!-- Bottom Navigation -->
<% include partials/bottom_nav.ejs %>
<!-- Footer -->
<% include partials/footer.ejs %>